<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pjx.skad.calculadora.MainActivity">

    <TextView
        android:id="@+id/calcText"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@android:color/white"
        android:gravity="center|end"
        android:paddingEnd="5dp"
        android:paddingStart="0dp"
        android:text="@string/initialValue"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="66dp">

            <LinearLayout
                style="?android:buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/sevenButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="7"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/eightButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="8"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/nineButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="9"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                style="?android:buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/fourButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="4"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/fiveButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="5"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sixButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="6"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                style="?android:buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/oneButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="1"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/twoButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="2"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/threeButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="3"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                style="?android:buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/alterButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="+/-"
                    android:onClick="operationClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/zeroButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="0"
                    android:onClick="numberClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/eqlsButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorButtons"
                    android:text="="
                    android:onClick="eqlsClick"
                    android:textColor="#ffff"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="?android:buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/acButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/operationButtons"
                android:text="AC"
                android:onClick="acClick"
                android:textColor="#ffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/divButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/operationButtons"
                android:onClick="operationClick"
                android:text="รท"
                android:textColor="#ffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/multButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/operationButtons"
                android:text="x"
                android:onClick="operationClick"
                android:textColor="#ffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/minButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/operationButtons"
                android:text="-"
                android:onClick="operationClick"
                android:textColor="#ffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/plusButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/operationButtons"
                android:onClick="operationClick"
                android:text="+"
                android:textColor="#ffff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
